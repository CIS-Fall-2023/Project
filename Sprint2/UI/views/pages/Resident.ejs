<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div>
            <!-- CRUD operations for resident -->
            <!-- Add Resident -->
            <form action="/Resident" method="post">
                <h2>Add Resident</h2>
                <div class="form-group">
                    <label for="id" class="form-label">Resident ID</label>
                    <input type="text" id="id" name="id" class="form-control" placeholder="Resident ID" required autofocus>
                </div>
                <div class="form-group">
                    <label for="firstname" class="form-label">First Name</label>
                    <input type="text" id="firstname" name="firstname" class="form-control" placeholder="First Name" required>
                </div>
                <div class="form-group">
                    <label for="lastname" class="form-label">Last Name</label>
                    <input type="text" id="lastname" name="lastname" class="form-control" placeholder="Last Name" required>
                </div>
                <div class="form-group">
                    <label for="age" class="form-label">Age</label>
                    <input type="number" id="age" name="age" class="form-control" placeholder="Age" required>
                </div>
                <div class="form-group">
                    <label for="room" class="form-label">Room</label>
                    <input type="text" id="room" name="room" class="form-control" placeholder="Room" required>
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Resident">
            </form>

            <!-- View All Residents -->
            <h2>All Residents</h2>
            <% if (residents && residents.length > 0) { %>
                <ul>
                    <% residents.forEach(resident => { %>
                        <li>ID: <%= resident.id %>, First Name: <%= resident.firstname %>, Last Name: <%= resident.lastname %>, Age: <%= resident.age %>, Room: <%= resident.room %></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No residents found.</p>
            <% } %>

            <!-- Delete Resident -->
            <form action="/Resident" method="delete">
                <h2>Delete Resident</h2>
                <div class="form-group">
                    <label for="id" class="form-label">Resident ID to Delete</label>
                    <input type="text" id="id" name="id" class="form-control" placeholder="Resident ID to Delete" required>
                </div>
                <input class="btn btn-lg btn-danger btn-block" type="submit" value="Delete Resident">
            </form>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>